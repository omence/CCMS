@{
    Layout = "_Layout";
}
<div class="container-fluid p-0">
    <div class="site-content contact">
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column">
                <h1 class="site-title">Community Case Management System Build</h1>
                <p class="site-desc">
                    Using Technology to Bring Nonprofits Across Washington State Together as One Cohesive Team!
                </p>

                <div class="d-flex flex-row">
                    <input type="button" value="Donate" class="btn site-btn1 px-4 py-3 mr-4 btn-dark" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section-1">
    <div class="container text-center">
        <h1 class="heading-1">Contact Us</h1>

        @Html.ValidationSummary()

            <form asp-action="Contact" method="post">
                <input name="email" class="form-control" placeholder="Your Email Address" />
                <input name="subject" class="form-control" placeholder="Message Subject" />
                <textarea name="message" class="form-control" placeholder="Write Message Here"></textarea>
                <button type="submit" class="btn btn-outline-secondary">Send Message</button>
            </form>
    </div>
</div>
